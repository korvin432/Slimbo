<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <stroke
                android:width="1dip"
                android:color="@color/colorAccent" />
            <gradient
                android:startColor="@color/colorTransparent"
                android:centerY="0.75"
                android:endColor="@color/colorTransparent"
                android:angle="270"
                />
            <corners android:radius="26dp"/>
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <stroke
                    android:width="1dip"
                    android:color="@color/colorAccentTransparent" />
                <gradient
                    android:startColor="@color/colorAccentTransparent"
                    android:endColor="@color/colorAccentTransparent"
                    android:centerY="0.75"
                    android:angle="270"
                    />
                <corners android:radius="26dp"/>
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <stroke
                    android:width="1dip"
                    android:color="@color/colorAccentTransparent" />
                <gradient
                    android:startColor="@color/colorAccentTransparent"
                    android:endColor="@color/colorAccentTransparent"
                    android:centerY="0.75"
                    android:angle="270"
                    />
                <corners android:radius="26dp"/>
            </shape>
        </clip>
    </item>

</layer-list>

