                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:layout_width="140dp"
                                android:layout_height="100dp"
                                android:background="@drawable/birds">

                                <ImageView
                                    android:id="@+id/birds_check"
                                    android:layout_width="17dp"
                                    android:layout_height="17dp"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/checkmark"
                                    android:visibility="gone" />

                                <SeekBar
                                    android:id="@+id/birds_seekbar"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_above="@+id/birds_text"
                                    android:background="@color/colorCardTitleBackground"
                                    android:max="100"
                                    android:progress="100"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/birds_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:background="@color/colorCardTitleBackground"
                                    android:fontFamily="sans-serif-light"
                                    android:text="@string/birds"
                                    android:textAlignment="center"
                                    android:textColor="@color/colorWhiteText"
                                    android:textSize="16sp" />


                            </RelativeLayout>

