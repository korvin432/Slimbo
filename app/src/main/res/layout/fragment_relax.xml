<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".ui.relax.RelaxFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:cardBackgroundColor="@color/card_bg"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@drawable/recording_card_background_gradient"
            android:orientation="vertical">


            <com.google.android.material.button.MaterialButton
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_ripple"
                android:scaleY="0.6"
                android:scaleX="0.65"
                android:alpha="0.8"
                android:textSize="19sp"
                android:text="@string/sounds"
                android:textAllCaps="false"
                android:textColor="@color/colorWhiteText" />


            <androidx.core.widget.NestedScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:scrollbars="vertical"
                    android:useDefaultMargins="true">


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/birds"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="140dp"
                            android:layout_height="110dp"
                            android:background="@drawable/birds"
                            android:gravity="bottom"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorCardTitleBackground"
                                android:fontFamily="sans-serif-light"
                                android:text="@string/birds"
                                android:textAlignment="center"
                                android:textColor="@color/colorWhiteText"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cricket"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="140dp"
                            android:layout_height="110dp"
                            android:background="@drawable/cricket"
                            android:gravity="bottom"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-light"
                                android:background="@color/colorCardTitleBackground"
                                android:text="@string/cricket"
                                android:textAlignment="center"
                                android:textColor="@color/colorWhiteText"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/nature_sounds"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="140dp"
                            android:layout_height="110dp"
                            android:background="@drawable/nature_sounds"
                            android:gravity="bottom"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-light"
                                android:background="@color/colorCardTitleBackground"
                                android:text="@string/nature_sounds"
                                android:textAlignment="center"
                                android:textColor="@color/colorWhiteText"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/pink_noise"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="140dp"
                            android:layout_height="110dp"
                            android:background="@drawable/pink_noise"
                            android:gravity="bottom"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-light"
                                android:background="@color/colorCardTitleBackground"
                                android:text="@string/pink_noise"
                                android:textAlignment="center"
                                android:textColor="@color/colorWhiteText"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rain_in_a_car"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="140dp"
                            android:layout_height="110dp"
                            android:background="@drawable/rain_in_a_car"
                            android:gravity="bottom"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-light"
                                android:background="@color/colorCardTitleBackground"
                                android:text="@string/rain_in_a_car"
                                android:textAlignment="center"
                                android:textColor="@color/colorWhiteText"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rain_on_the_roof"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="140dp"
                            android:layout_height="110dp"
                            android:background="@drawable/rain_on_the_roof"
                            android:gravity="bottom"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-light"
                                android:background="@color/colorCardTitleBackground"
                                android:text="@string/rain_on_the_roof"
                                android:textAlignment="center"
                                android:textColor="@color/colorWhiteText"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/street_noise"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="140dp"
                            android:layout_height="110dp"
                            android:background="@drawable/street_noise"
                            android:gravity="bottom"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-light"
                                android:background="@color/colorCardTitleBackground"
                                android:text="@string/street_noise"
                                android:textAlignment="center"
                                android:textColor="@color/colorWhiteText"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/thunder"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="140dp"
                            android:layout_height="110dp"
                            android:background="@drawable/thunder"
                            android:gravity="bottom"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-light"
                                android:background="@color/colorCardTitleBackground"
                                android:text="@string/thunder"
                                android:textAlignment="center"
                                android:textColor="@color/colorWhiteText"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/water_stream"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="140dp"
                            android:layout_height="110dp"
                            android:background="@drawable/water_stream"
                            android:gravity="bottom"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-light"
                                android:background="@color/colorCardTitleBackground"
                                android:text="@string/water_stream"
                                android:textAlignment="center"
                                android:textColor="@color/colorWhiteText"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </GridLayout>
            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>