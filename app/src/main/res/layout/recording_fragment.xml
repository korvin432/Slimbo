<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    tools:context=".ui.recording.RecordingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_bg"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/image_sad"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="25dp"
                        android:src="@drawable/sad"
                        android:tint="@color/colorTextHint" />

                    <ImageView
                        android:id="@+id/image_neutral"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="25dp"
                        android:src="@drawable/neutral"
                        android:tint="@color/colorTextHint" />

                    <ImageView
                        android:id="@+id/image_smile"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="25dp"
                        android:src="@drawable/smile"
                        android:tint="@color/colorTextHint" />

                    <ImageView
                        android:id="@+id/image_happy"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/happy"
                        android:tint="@color/colorTextHint" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/how_do_you_feel"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhiteText"
                    android:textSize="17sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_bg"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/selected_factors_recycler"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/factors"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorLightHint"
                    android:textSize="19sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_bg"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <LinearLayout
                    android:id="@+id/sleep_at_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sleep_at_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/sleep_at"
                        android:textAlignment="center"
                        android:textColor="@color/colorLightHint"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/sleep_at"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="19:30"
                        android:textColor="@color/colorFilled"
                        android:textSize="19sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sleep_time_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sleep_time_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/sleep_time"
                        android:textAlignment="center"
                        android:textColor="@color/colorLightHint"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/sleep_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="7:35"
                        android:textAlignment="center"
                        android:textColor="@color/colorFilled"
                        android:textSize="19sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/wake_up_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/wake_up_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/wake_up"
                        android:textAlignment="center"
                        android:textColor="@color/colorLightHint"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/wake_up"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="7:35"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/colorFilled"
                        android:textSize="19sp" />
                </LinearLayout>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_bg"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <LinearLayout
                    android:id="@+id/progress_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical"/>

                <com.mindyapps.slimbo.internal.DottedSeekBar
                    android:id="@+id/sleep_progress"
                    android:progressDrawable="@drawable/custom_seekbar_progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:splitTrack="false"
                    android:clickable="false"
                    android:maxHeight="10dp"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_bg"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/noise"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorLightHint"
                    android:textSize="19sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>