<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sleeping_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sleeping.SleepingActivity">


    <RelativeLayout
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sleep_bg"
        android:padding="20dp"
        android:keepScreenOn="true">

        <TextClock
            android:id="@+id/text_clock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:fontFamily="sans-serif-thin"
            android:format12Hour="hh:mm"
            android:format24Hour="HH:mm"
            android:textAlignment="center"
            android:textColor="@color/colorWhiteText"
            android:textSize="70sp" />

        <TextView
            android:id="@+id/snoring_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhiteText"
            android:textSize="19sp"
            android:layout_below="@id/text_clock"/>

        <Button
            android:id="@+id/start_listen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/stop_listen"
            android:text="@string/start"/>

        <Button
            android:id="@+id/stop_listen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:text="stop"/>

    </RelativeLayout>

</FrameLayout>