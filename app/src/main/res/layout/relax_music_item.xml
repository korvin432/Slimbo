<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:paddingHorizontal="10dp"
    android:layout_width="match_parent"
    android:layout_height="50dp">


    <ImageView
        android:id="@+id/play_music_btn"
        android:layout_width="45dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_play"
        android:layout_centerVertical="true"
        android:tint="@color/colorFilled" />

    <TextView
        android:id="@+id/relax_music_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zen Stones"
        android:textColor="@color/colorWhiteText"
        android:layout_toEndOf="@id/play_music_btn"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:textSize="17sp"/>

    <LinearLayout
        android:id="@+id/paid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_download"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:tint="@color/colorTextHint"
            android:src="@drawable/download"/>
        <TextView
            android:id="@+id/music_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhiteText"
            android:layout_marginStart="10dp"
            android:text="dsgsdg"/>
    </LinearLayout>



    <TextView
        android:id="@+id/music_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/colorWhiteText"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>