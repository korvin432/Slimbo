<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sleep"
    app:startDestination="@id/navigation_sleep">

    <fragment
        android:id="@+id/navigation_sleep"
        android:name="com.mindyapps.android.slimbo.ui.sleep.SleepFragment"
        android:label="@string/title_sleep"
        tools:layout="@layout/fragment_sleep">
        <action
            android:id="@+id/action_navigation_sleep_to_my_dialog"
            app:destination="@id/factors_dialog" />
        <action
            android:id="@+id/action_navigation_sleep_to_select_music_dialog"
            app:destination="@id/select_music_dialog" />
        <action
            android:id="@+id/action_navigation_sleep_to_select_alarm_dialog"
            app:destination="@id/select_alarm_dialog" />
    </fragment>

    <dialog
        android:id="@+id/factors_dialog"
        android:name="com.mindyapps.android.slimbo.ui.dialogs.factors.FactorsFragment"
        tools:layout="@layout/factors_fragment">
        <argument
            android:name="selected_factors"
            app:argType="com.mindyapps.android.slimbo.data.model.Factor[]"/>
    </dialog>

    <dialog
        android:id="@+id/select_music_dialog"
        android:name="com.mindyapps.android.slimbo.ui.dialogs.music_select.SelectMusicFragment"
        tools:layout="@layout/select_music_fragment">
        <argument
            android:name="selected_music"
            app:argType="com.mindyapps.android.slimbo.data.model.Music"/>
        <argument
            android:name="selected_length"
            app:argType="string"/>
    </dialog>

    <dialog
        android:id="@+id/select_alarm_dialog"
        android:name="com.mindyapps.android.slimbo.ui.dialogs.alarm.AlarmFragment"
        tools:layout="@layout/select_music_fragment">
        <argument
            android:name="selected_alarm_sound"
            app:argType="com.mindyapps.android.slimbo.data.model.Music"/>
        <argument
            android:name="first_alarm"
            app:argType="integer[]"/>
        <argument
            android:name="second_alarm"
            app:argType="integer[]"/>
        <argument
            android:name="third_alarm"
            app:argType="integer[]"/>
    </dialog>

</navigation>